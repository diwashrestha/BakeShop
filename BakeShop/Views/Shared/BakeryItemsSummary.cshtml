@model BakeryItem

<div class="col-6 col-sm-6 col-lg-4 col-md-4" style="margin-bottom: 2em; text-align: center">
    <div class="img-thumbnail" style="text-align: center;">
        <img class ="img-fluid" src="@Model.ImageThumbnailUrl" alt="" width="300" height="300"/>
        <div class="caption">
            <h3>
                <a asp-controller="Bakeryitem" asp-action="Details" asp-route-id="@Model.BakeryItemId">@Model.Name</a>
            </h3>
            <h4>@Model.Price.ToString("c")</h4>
        </div>
    </div>
</div>