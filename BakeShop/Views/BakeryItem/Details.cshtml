<div class="container marginTop">
    <div class="row">

        <div class="col">
            <div class="text-center view overlay hm-white-slight">
                <img src="@Model.ImageUrl" class="img-fluid" alt="">
                <a href="#">
                    <div class="mask waves-effect waves-light"></div>
                </a>
            </div>
        </div>
        <div class="col">
            <!--Title-->
            <h3 style="font-family: 'Montserrat', sans-serif;">@Model.Name</h3>
            <h5 style="font-family: 'Source Sans Pro', sans-serif;">@Model.Price.ToString("c")</h5>

            <p class="text-justify" style="font-family: 'Open Sans', sans-serif;">@Model.Longdescription.</p>
            <div class="text-right">
                <div class="btn-group ">
                    <a class="btn-group">
                        <a style="font-family: 'Lato', sans-serif;" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                            Add more Items<span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu" role="menu">
                            <li><a class="dropdown-item" style="font-family: 'Lato', sans-serif;" asp-controller="BakeryItem" asp-action="List" asp-route-category="Cake">Cake</a></li>
                            <li><a class="dropdown-item" style="font-family: 'Lato', sans-serif;" asp-controller="BakeryItem" asp-action="List" asp-route-category="Cookie">Cookie</a></li>
                            <li><a class="dropdown-item" style="font-family: 'Lato', sans-serif;" asp-controller="BakeryItem" asp-action="List" asp-route-category="Cupcake">CupCake</a></li>
                            <li><a class="dropdown-item" style="font-family: 'Lato', sans-serif;" asp-controller="BakeryItem" asp-action="List" asp-route-category="Doughnut">DoughNut</a></li>
                            <li><a class="dropdown-item" style="font-family: 'Lato', sans-serif;" asp-controller="BakeryItem" asp-action="List" asp-route-category="Bread">Bread</a></li>
                            <li><a class="dropdown-item" style="font-family: 'Lato', sans-serif;" asp-controller="BakeryItem" asp-action="List" asp-route-category="Pie">Pie</a></li>
                        </ul>
                    </a>
                    <a class="btn btn-light border-dark" id="cartButton" asp-controller="ShoppingCart" asp-action="AddToShoppingCart" asp-route-bakeryitemId="@Model.BakeryItemId">
                        Add to cart
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>